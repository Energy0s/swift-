{
  "name": "swift-transfer-simulator",
  "version": "1.0.0",
  "description": "A realistic simulator of the SWIFT financial transfer system with frontend",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm run build",
    "build:backend": "cd src/backend && npm run build",
    "start": "node dist/backend/server.js",
    "test": "jest"
  },
  "keywords": [
    "swift",
    "finance",
    "transfer",
    "simulation",
    "banking",
    "international-payment"
  ],
  "author": "SWIFT Simulator Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "@types/react": "^18.0.0",
    "@types/node": "^18.0.0"
  }
}